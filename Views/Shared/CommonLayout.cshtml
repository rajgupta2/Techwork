        @*BootStrap Modal*@
        <!-- Button trigger modal -->
        <button type="button" id="Enquiry" class="btn" data-toggle="modal" data-target="#myModal">
            Enquiry
        </button>
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content bg-secondary">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Enquiry-Box</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <p id="pres" class="text-center h3 bg-warning text-dark"></p>
                    <div class="modal-body">
                        <input type="text" name="Name" id="enqname" class="form-control" placeholder="Name" /><br />
                        <input type="email" name="Email" id="enqmail" class="form-control" placeholder="Email" /><br />
                        <input type="number" name="Phone" id="enqmob" class="form-control" placeholder="Phone" /><br />
                        <textarea placeholder="Message..." id="enqmsg" class="form-control" name="Query" rows="5" style="resize:none;"></textarea>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-lg btn-success" id="ask">Ask</button>
                        <button type="button" class="btn  btn-lg btn-danger" id="btnclose" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Script foe modal-->
        <script>
            $(document).ready(function () {
                $("#ask").click(function () {
                    var name = $("#enqname").val().trim();
                    var email = $("#enqmail").val().trim();
                    var enqmob = $("#enqmob").val().trim();
                    var enqmsg = $("#enqmsg").val().trim();
                    var result = true;
                    $(".err").remove();
                    //validaton for name
                    if (name.length == 0) {
                        result = false;
                        $("#enqname").after("<span class='text-warning err'>Enter name.</span>");
                    } else if (name.length < 2) {
                        result = false;
                        $("#enqname").after("<span class='text-warning err'>Enter a Valid Name.</span>");
                    }
                    //validating for Phone
                    if (enqmob.length == 0) {
                        result = false;
                        $("#enqmob").after("<span class='text-warning err'>Enter Phone number.</span>");
                    } else if (enqmob.length != 10) {
                        result = false;
                        $("#enqmob").after("<span class='text-warning err'>Enter a valid Phone number.</span>");
                    }
                    //validating for email
                    if (email.length == 0) {
                        result = false;
                        $("#enqmail").after("<span class='text-warning err'>Enter Email.</span>");
                    } else if (email.length < 12) {
                        result = false;
                        $("#enqmail").after("<span class='text-warning err'>Enter a valid Email.</span>");
                    }
                    //validating for address
                    if (enqmsg.length == 0) {
                        result = false;
                        $("#enqmsg").after("<span class='text-warning err'>Enter Query.</span>");
                    } else if (enqmsg.length < 12) {
                        result = false;
                        $("#enqmsg").after("<span class='text-warning err'>Query should be more than 12 charcters.</span>");
                    }
                    if (result == true) {
                        var obj = { Name: name, Email: email, Phone: enqmob, Message: enqmsg };
                        $.ajax({
                            type: "POST",
                            url: "/Home/saveenquiry",
                            data: obj,
                            dataType: "json",
                            success: function (message) {
                                if (message == "SUCCESS") {
                                    $("#pres").fadeIn(200).text("Your enquiry saved successfully.").fadeOut(6000, function () {
                                        $("input,textarea").val("");
                                        $("#btnclose").trigger("click");
                                    });
                                }
                                else {
                                    $("#pres").fadeIn(200).text("Sorry! we are unable to save your query.").fadeout(6000);
                                }
                            }
                        });
                    }
                });
            });
        </script>

