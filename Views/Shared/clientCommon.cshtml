@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clientcommon</title>
    <link href="~/Content/CSS/bootstrap-grid.min.css" rel="stylesheet" />
    <script src="~/Content/JS/jquery-3.6.0.min.js"></script>
    <script src="~/Content/JS/jquery-3.6.0.min.js"></script>
    <script src="~/Content/JS/bootstrap.bundle.min.js"></script>
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/images/mylogo2.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
        .navbar-nav, .navbar {
            position: sticky;
            top: 0%;
            left:18%;
            right: 0%;
            z-index: 1;
        }

        .nav-item > a:hover, footer .row div a:hover {
            opacity: 0.4;
        }

        .nav-item > a {
            color: #ff3800;
            text-decoration: none;
        }
        .Name{
            position:fixed;
            top:8%;
            right:3%;
            z-index:4;
        }
        @@media screen and (max-width:550px) {
            h1 {
                font-size: 20px;
            }

            .btn {
                padding: .15rem .5rem;
                font-size: .875rem;
                line-height: 1.5;
                border-radius: 2rem;
            }
            .Name {
                position: fixed;
                top: 4%;
                right: 3%;
                z-index: 999999;
            }
        }
        #backtotop{
            position:fixed;
            right: 20px;
            bottom: 25px;
            border-radius: 50%;
            z-index: 2;
        }
        .dropdown-menu{
            left:-30%;
        }
    </style>
    <script>
        jQuery(document).ready(function () {
            var x = $("#presponse").text().trim();
            if (x.length > 0)
                $("#presponse").fadeIn(3500).delay(3500).fadeOut(1500);
            //backtotop
            $("#backtotop").click(function () {
                $("html,body").animate({ scrollTop: 0 }, '1500');
            });
            //for changing the color/bgcolor of navbar while scrolling
            $(window).scroll(function () {
                if ($(window).scrollTop() > 20) {
                    $("#backtotop").show();
                    $("nav").addClass("bg-dark");
                    $(".nav-item>a").addClass("text-primary");
                } else {
                    $("#backtotop").hide();
                    $("nav").removeClass("bg-dark");
                    $(".nav-item>a").removeClass("text-primary");
                    $(".navbar-brand").removeClass("text-white");
                }
            });

        });
    </script>
</head>
<body>
    <!--Menu/Navigation Bar-->
    <nav class="navbar navbar-expand-lg navbar-light py-0">
        <!--logo-->
        <a class="navbar-brand pl-2" href="/">
            <img src="~/Content/images/mylogo2.png" style="max-height:90px;" />
            <span style="font-size:20px;font-weight:bolder" class="text-success"> Techwork</span>
        </a>
        <!--Toggler icon for mobile screen-->
        <button class="navbar-toggler pt-0" type="button" data-toggle="collapse" id="togglericon" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse m-0" id="navbarTogglerDemo02">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="pl-3" href="/Client/Welcome"><i class="bi bi-house-door pr-1"></i>DashBoard</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/PostAWork"><i class="bi bi-upload pr-2"></i>Post a Work</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/WorkRequest"><i class="bi bi-cursor pr-2"></i>Work Request</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/SearchDeveloper"><i class="bi bi-search pr-2"></i>Search Developer</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/MyWorks"><i class="bi bi-folder pr-2"></i>My Works</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/Feedback"><i class="bi bi-chat-square-dots pr-2"></i>Feedback</a>
                </li>
                <li class="nav-item">
                    <a class="pl-3" href="/Client/ManageNotification"><i class="bi bi-folder-plus pr-2"></i>Manage Notification</a>
                </li>
                <li class="nav-item dropdown m-0">
                    <a class=" dropdown-toggle px-3" data-toggle="dropdown"
                       href="#"
                       role="button" aria-expanded="false"><i class="bi bi-gear-fill pr-2"></i>Settings</a>
                    <div class="dropdown-menu m-0">
                        <a class="dropdown-item" href="/Client/MyProfile"><i class="bi bi-house pr-2"></i>My Profile</a>
                        <a class="dropdown-item" href="/Client/ChangePassword"><i class="bi bi-key pr-2"></i>Change Password</a>
                        <a class="dropdown-item" href="/Client/LogOut"><i class="bi bi-box-arrow-in-right pr-2"></i>Log-out</a>
                    </div>
                </li>
            </ul>
            <div class="nav-item Name">
                <span class="h5 text-primary">@ViewBag.Name</span>
            </div>
        </div>

    </nav>
    <!--navbar-->
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class=" row pl-4 mr-0" style="background-color: rgba(0, 0, 0, 0.05);">
            <div class="col-sm-8">
                © 2021 Copyright:All rights are reserved by
                <a href="/Home">TechWork.com</a>
            </div>
            <div class="col-sm-4">
                Developed By<a href="/Home">TechWork</a> Team
            </div>
        </div>
    </footer>
    <!--back to top btn-->
    <a id="backtotop" class="bg-primary btn" style="display:none;"><i class="bi bi-chevron-up"></i></a>
</body>
</html>

